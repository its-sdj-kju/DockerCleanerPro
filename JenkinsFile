pipeline {
    agent any
    stages {
        stage('Step 1: Environment Check') {
            steps {
                echo 'Verifying Docker Access...'
                sh 'docker version' // Confirms Jenkins can talk to the Docker socket
            }
        }
        stage('Step 2: Rebuild Docker Cleaner') {
            steps {
                echo 'Syncing project with latest GitHub code...'
                sh 'docker-compose up -d --build app' // This updates your Flask UI automatically
            }
        }
    }
}